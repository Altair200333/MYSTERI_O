<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_dark1"
    tools:context="com.altaindustr.mysterio.MainActivity">

    <ImageView
        android:id="@+id/iv_photos"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/icon_photos"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/iv_videos"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/iv_photos"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/icon_videos"/>

    <ImageView
        android:id="@+id/iv_audios"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_alignStart="@+id/iv_photos"
        android:layout_below="@+id/iv_photos"
        android:layout_marginTop="44dp"
        app:srcCompat="@drawable/icon_audios"/>

</RelativeLayout>
